*, html , body 
	margin 0
	padding 0
	box-sizing border-box
	list-style none
	background-color transparent
	overflow hidden
	a
		text-decoration none
		cursor pointer
		
	button
		border none
		outline none
		width: 120px;
		height 40px;
		text-align center
		color #fff
	p
		text-align justify	
		font-size .28rem;
		color #999
	h4
		font-size .48rem	
		font-weight bold
		color #333
	h4, p, div, span, ol, img
		background-color transparent
		
